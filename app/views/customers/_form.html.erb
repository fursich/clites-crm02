
<%= form_for @customer do |f| %>

<div class ="form_group">
    <%= f.text_label :family_name %><br>
    <%= f.text_field :family_name, class: "form_control" %>
</div>
<div class ="form_group">
    <%= f.text_label :given_name %><br>
    <%= f.text_field :given_name, class: "form_control" %>
</div>
<div class ="form_group">
    <%= f.text_label :email %><br>
    <%= f.text_field :email, class: "form_control" %>
</div>

<%= f.submit class: "btn btn-default" %>

<% end %>


